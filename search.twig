{% extends "__layout.twig" %}

{% block content %}
    <h1 class="mb-5" style="color: black;">Поиск по каталогу</h1>

    <form class="row g-3 mb-3" action="">
        <div class="col">
            <label class="form-label" style="color: black">Тип</label>
            <select class="form-select" name="type">
                <option value="">Все</option>
                {% for type in types %}
                <option value="{{ type.type }}" {{ type == type.type ? "selected" }}>{{ type.type|title }}</option>
                {% endfor %}
            </select>
        </div>

        <div class="col">
            <label class="form-label" style="color: black">Название</label>
            <input class="form-control" type="text" name="title" autocomplete="off" value="{{ title }}">
        </div>
        

        <div class="col">
            <label class="form-label" style="color: black">Цвет</label>
            <select class="form-select" name="description">
                <option value="">Все цвета</option>
                {% for description in description %}
                <option value="{{ description.description }}" {{ description == description.description ? "selected" }}>{{ description.description|title }}</option>
                {% endfor %}
            </select>
        </div>

        
        
        <div class="col mt-5">
            <button class="btn btn-primary" type="submit">Найти</button>
        </div>
    </form>

    {{ include('menu.twig', {'1_objects' : objects}) }} 
{% endblock %}
