{% extends "__layout.twig" %}

{% block content %}
    <h1 style="color: black;">Добавление новой категории товара</h1>
    <hr>

    {% if message %}
        <div class="alert alert-info">
            {{ message }}
            <a href="/?type={{ type }}">Открыть новую категорию</a>
        </div>
    {% endif %}

    <form method="POST" enctype="multipart/form-data" class="row g-3">
        <div class="col-4">
            <label class="form-label"style="color: black;">Тип</label>
            <input type="text" class="form-control" name="type" autocomplete="off">
        </div>
    
        <div class="col-12 text-end">
            <button type="submit" class="btn btn-primary">Добавить</button>
        </div>
    </form>

{% endblock %}
