{% extends "__layout.twig" %}
{% from "forms.twig" import btn as btn_link %}

{% block content %}

<div class="container-fluid">
    <div class="row g-2">
        {% for object in pc_objects %}
        
        <div class="col-xl-4 col-md-6 col-sm-12 d-flex">
            <div class="card text-center flex-grow-1">
                <div class="position-absolute" style="left: 4px; top: 4px;">
                    <form action="/pc_objects/{{ object.id }}/update" method="GET">
                        <button class="btn btn-warning">
                            <i class="fas fa-pencil"></i>
                        </button>
                    </form>
                </div>
                <div class="position-absolute" style="right: 4px; top: 4px;">
                    <form action="/pc_objects/{{ object.id }}/delete" method="POST">
                        <button class="btn btn-danger">
                            <i class="fas fa-times"></i>
                        </button>
                    </form>
                </div>
                <div class="h-75">
                    <img class="card-img-top h-100" src="{{ object.image }}" alt="">
                </div>
                <div class="card-body">
                    {{ btn_link(object.title, "/pc_objects/" ~ object.id, "w-100 btn btn-primary text-white", true) }}
                    <a href="/pc_objects/{{ object.id }}?show=image" class="btn btn-link" style="color: black;">Картинка</a>
                    <a href="/pc_objects/{{ object.id }}?show=info" class="btn btn-link"style="color: black;">Описание</a>
                    <button type="submit" class="btn btn-primary" onclick="addToCart()">Добавить в корзину</button>
                </div>
              </div>
        </div>

        <script>
        function addToCart() {

        alert('Товар добавлен в корзину!');
         }
        </script>
    
        {% endfor %}
    </div>
</div>
    
{% endblock %}